<!-- album -->
<div class="album <%= typeof visible === 'undefined' || !visible ? 'template' : '' %>">

    <% if(typeof heading === 'undefined' || heading) { %>
        <!-- album heading -->
        <div class="album__heading container container--row container--Sgap container--noHalign">
            <% if(typeof img === 'undefined' || img) { %>
                <img src="#" class="album__img img">
            <% } %>
            <h1><%= typeof title !== 'undefined' ? title : '' %></h1>
            <% if(typeof edit !== 'undefined' && edit) { %>
                <span class="remove-btn icon"><hr class="remove-line"></span>
                <% } %>
        </div>
    <% } %>

    <!-- album song heading -->
    <div class="album__header album__col-temp <%= typeof trackNumber === 'undefined' || trackNumber ? '' : 'album__col-temp--noNum' %>">
        <% if(typeof trackNumber === 'undefined' || trackNumber) { %>
            <h3>NÂ°</h3>
        <% } %>
        <h3>nome_canzone</h3>
        <h3>autore</h3>
        <h3>album</h3>
        <h3>durata</h3>
    </div>

    <hr class="line">

    <!-- album song -->
    <ul class="album__song-list container container--nogap">
        <li class="album__song album__col-temp <%= typeof trackNumber === 'undefined' || trackNumber ? '' : 'album__col-temp--noNum' %>">
            <% if(typeof trackNumber === 'undefined' || trackNumber) { %>
                <span>0</span>
            <% } %>
            <span></span> 
            <span></span>
            <span></span> 
            <span>0:00</span>

            <div class="controls">
                <% if(typeof edit !== 'undefined' && edit) { %>
                    <span class="remove-btn icon"><hr class="remove-line"></span>
                <% } else { %>
                    <span><img src="/assets/img/preferiti/stella_vuota.png" class="icon"></span>
                <% } %>
            </div>
        </li>
    </ul>

    <% if(typeof edit !== 'undefined' && edit) { %>
        <button class="add-btn" id="addSongToAlbum" onclick="add_songAlbum()">
            <span class="add-btn__cross">+</span>
            <h3>aggiungi canzone</h3>
        </button>
    <% } %>
</div>
