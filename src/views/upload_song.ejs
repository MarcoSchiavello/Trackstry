<%- include("partials/head", { title: 'Upload song', js: [ { file: 'pages/uploadSong.js' }, { file: 'fakeUpload.js' } ] }) %> 
<%- include("partials/nav") %>

<div class="abs-center container">
    <div class="container container--row">
        <div class="pivot" fakeUpload="albumImg">
            <h3 class="abs-center" clear="albumImg">
                Inserisci immagine
            </h3>
            <img class="album__img img" preview="albumImg">
        </div>
        <input realUpload="albumImg" type="file" class="upload" accept="image/*" name="songImg">

        <%- include("components/inputText", { name: 'songTitle', label: 'Titolo canzone'}) %> 
        
        <img src="../assets/img/upload_icon.png" class="icon" fakeUpload="songFile">
        <input type="file" realUpload="songFile" name="songFile" accept="audio/*">
        <h5 fileName="songFile"></h5>
    </div>

    <button class="button" action="submitUploading">Crea</button>

</div>

<%- include('partials/footer') %>