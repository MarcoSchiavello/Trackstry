<%- include("partials/head", { title: 'Profile', js: [ { file: 'pages/profile.js' }, { file: 'fakeUpload.js' } ] }) %> 
<%- include("partials/nav") %>

<div class="profile container">
    <div class="profile__card container--Lgap container container--row">
        <div class="pivot"  fakeUpload="newImg">
            <input field="newImg" realUpload="newImg" type="file" class="upload" accept="image/*">
            <img class="profile__card__img img" src="#" field="profileImg" preview="newImg">
            <div class="img-filter container">cambia img</div>
        </div>
        <div class="container container--nogap container--noValign">
            <span>Username</span>
            <h2 class="profile__card__value" field="username"></h2>
            <span>E-mail</span>
            <h2 class="profile__card__value" field="email"></h2>
            <span>Password</span>
            <h2 class="profile__card__value">* * * * * * * * * * *</h2>
        </div>
    </div>

    <div class="container container--Sgap full-screen-section">
        <h1>Banner</h1>
        <div class="pivot" fakeUpload="newBanner">
            <input field="newBanner" realUpload="newBanner" type="file" class="upload" accept="image/*">
            <img class="profile__banner img" src="#" field="profileBanner" preview="newBanner">
            <div class="img-filter container">cambia banner</div>
        </div>
    </div>

    <div class="container full-screen-section">
        <h1>Cambia dati</h1>
        <div class="full-screen-section container container--noValign">
            <%- include('components/inputText', { name: 'newEmail', label: 'Nuova E-mail' }) %>
            <%- include('components/inputText', { name: 'newUsername', label: 'Nuovo Username' }) %>
            <%- include('components/inputText', { name: 'newPassword', label: 'Nuova Password' }) %>
            <button type="button" class="button button--fit-cont" action="changeData">Cambia</button>
        </div>
    </div>
</div>

<%- include("partials/footer") %> 
