<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../assets/Img/Logo.png">
    <link rel="stylesheet" href="../assets/css/style.css">
    <title>Trackstry Artista</title>
</head>
<body>
    <%- include("partials/nav") %> 
    <div id="cover_artista">
        <div style="width: 100%;height: 100%;overflow: hidden;">
            <img src="../assets/Img/home/bg_home.jpg" class="img_cover">
        </div>
        <div style="display: flex;">
            <img src="../assets/Img/9dcd0cf7ed5659114bdcddea44ffaab4.png" id="img_artista">
            <h1 style="transform: translateY(-50%); margin-left: 30px;" >Naturald</h1>
        </div>
    </div>
    <div class="album">
        <div style="display: flex;align-items: baseline; margin: 0;">
            <img src="../assets/Img/9dcd0cf7ed5659114bdcddea44ffaab4.png" style="width: 138px;height: 128px;">
            <h1 style="margin-left: 30px;">titolo_album</h1>
        </div>
        <div style="display: flex;">
            <h3>nome_canzone</h3>
            <h3 style="position: absolute;left: 300px;">autore</h3>
            <h3 style="position: absolute;left: 500px;">album</h3>
            <h3 style="position: absolute;left: 790px;">durata</h3>
        </div>
        <hr style="width: 100%;margin: 0;border: black solid 1px;">
        <ul style="padding: 0;margin: 0;list-style: none;" id="album_list">
        <% for(var i=0;i<10;i++){ %> 
            <li class="album_song">
                <span>ciao</span> 
                <span style="position: absolute;left: 300px;opacity: 0.8;font-size: 15px;">naturald</span>
                <span style="position: absolute;left: 500px;font-size: 18px;">titolo_album</span> 
                <span style="position: absolute;left: 790px;font-size: 18px;">3:30</span>
            </li>
        <% } %> 
        </ul>
    </div>
    <div class="single_song">
        <img src="../assets/Img/9dcd0cf7ed5659114bdcddea44ffaab4.png"  style="width: 138px;height: 128px;">
        <div style="display: flex;flex-direction: column;margin-left: 20px;">
            <h1>titolo_canzone</h1>
            <h3>autore</h3>
        </div>
        <h3 style="position: absolute;left: 790px;top: 50%;transform: translateY(-50%);">3:30</h3>
    </div>

    <%- include("partials/footer") %>
    <script src="../assets/js/app.js"></script>
</body>
</html>